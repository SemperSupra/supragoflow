{
  "name": "SupraGoFlow (dev)",
  "build": {
    "dockerfile": "../docker/Dockerfile.dev",
    "context": ".."
  },
  "workspaceFolder": "/work",
  "remoteEnv": {
    "SUPRAGOFLOW_IN_CONTAINER": "1",
    "GOMODCACHE": "/go/pkg/mod",
    "GOCACHE": "/go-cache",
    "GOPATH": "/go"
  },
  "mounts": [
    "source=supragoflow-gomodcache,target=/go/pkg/mod,type=volume",
    "source=supragoflow-gocache,target=/go-cache,type=volume"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go"
      ],
      "settings": {
        "go.useLanguageServer": true,
        "go.toolsManagement.autoUpdate": false
      }
    }
  },
  "postCreateCommand": "bash -lc './scripts/gg deps'"
}
